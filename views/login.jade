extends layout

block content
  script
    include ../public/javascripts/encryptPasswordBundle-min.js
  form#login-form(action="/login", method="POST", onsubmit="return encryptPassword(this);")
    input.text(type="text", name="email", placeholder="Email")
    br
    input.text.encrypt(type="password", name="password", placeholder="Password")
    br
    input(type="submit", value="Login")
  include ./includes/loginButtons.jade
  
